<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceptionistActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/serviceTitleLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Receptionist!"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <Spinner
            android:id="@+id/servicesList"
            android:layout_width="250dp"
            android:layout_height="50dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/editServiceBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Edit Patient Info" />

        <Button
            android:id="@+id/createServiceBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Add New Patient" />



        <Button
            android:id="@+id/deleteServiceBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Set Appointment" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/backToLoginBtnEmployee"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Back to Login Page" />

    </LinearLayout>
</RelativeLayout>